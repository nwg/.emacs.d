#!/usr/bin/env zsh

source "$(dirname $0)/env.sh"

set -e

template="e"
title="$1 sent: $2"
url=$3
body="Read Message"

/usr/bin/open -ea "$NWG_EMACS_APP"
org_url=$( nwg_make_capture_url "$template" "$url" "$title" "$body" )
"${NWG_CAPTURE}/scripts/nwg-emacsclient-wait" -e "${NWG_EMACSCLIENT}" -- "$org_url" </dev/null
/usr/bin/open -a "$NWG_EMACS_APP"
